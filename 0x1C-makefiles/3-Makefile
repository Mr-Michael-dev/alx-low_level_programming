CC = gcc
SRC = school.c main.c
OBJ = *.o
NAME = school
RM = rm -rf

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c
	$(CC) -c -o main.o $@

school.o: school.c
	$(CC) -c -o school.o $<

clean:
	$(RM) *~ *.swp school

oclean:
	$(RM) *.o

fclean:
	$(RM) *~ *.swp *.o school

re: fclean all
