CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -rf
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

main.o: main.c
	$(CC) $(CFLAGS) -c -o main.o main.c

school.o: school.c
	$(CC) $(CFLAGS) -c -o school.o school.c

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ *.swp $(OBJ) $(NAME)

re: fclean all
